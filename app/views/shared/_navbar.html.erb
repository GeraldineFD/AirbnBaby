    <span class="navbar-toggler-icon"></span>
  </button>


        <% if user_signed_in? %>

          <div><li class="nav-item">

              <%= form_tag baby_materials_path, method: :get do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Find a baby material"%>
                <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
              <% end %>

          </li></div>
          <div title = "Favoris"><li class="nav-item">
            <%= link_to '<i class="far fa-heart icon"></i>'.html_safe, '#', class: "nav-link" %>
